<div class="container">
	<div class="row">

		<div class="col-md-12">
			<h2>Requests :</h2>
			<hr class="line-seperate">
			<div class="well well-md full-width" style="margin-top:0">
				<% if @approvals.count == 0 %>
					<h4 class="well-content">No requests at the moment</h4>
				<% else %>
				<table class="full-width">
					<% @approvals.each do |approval| %>
					<tr>
						<td class="team-leader" style="font-family:Hind Madurai"><%= User.find(approval.user_id).name %></td>
						<td><%= link_to "Accept", accept_approval_path(approval.id), method: :post, class: "team-join" %></td>
						<td><%= link_to "Decline", decline_approval_path(approval.id), method: :post, class: "team-join" %></td>
					</tr>
				</table>
					<% end %>
				<% end %>

			</div>
			<%= link_to "Back", team_path(@team) %>
		</div>

	</div>
</div>

<div style="height:250px"></div>
